var etaDayInput = 2;
var currentTime = new GlideDateTime().getDate();
gs.info('current time: ' + currentTime);
gs.info('current time have converted to number: ' + currentTime.getNumericValue());

var dayBefore = new GlideDateTime().getDate();
dayBefore.addDaysUTC(-etaDayInput);
gs.info('day before: ' + dayBefore);
gs.info('day Before have converted to number: ' + dayBefore.getNumericValue());

var dayAfter = new GlideDateTime().getDate();
dayAfter.addDaysUTC(etaDayInput)
gs.info('day After: ' + dayAfter);
gs.info('day After have converted to number: ' + dayAfter.getNumericValue());



